generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Category {
  almacen
  bebidas_con_alcohol
  bebidas_sin_alcohol
  frescos
  limpieza
  golosinas
  galletas
  snacks
  cafe
  condimentos
}

model products {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  amount      String
  brand       String
  category    Category
  description String
  price       Float
  stock       Boolean
  tipo        String
  url         String
}

model User{
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique 
  password String
}