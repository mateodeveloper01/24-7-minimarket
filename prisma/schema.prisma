generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
}


model products {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  amount      String
  brand       String
  category    String
  description String
  image       ProductsImage?
  price       Float
  stock       Boolean
  tipo        String
  url         String
  categoryModel CategoryModel @relation(fields: [categoryModelId], references: [id])
  categoryModelId String @db.ObjectId
}

type ProductsImage {
  public_id String
  url       String
}

model CategoryModel {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  products products[]
}

model Image {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  productsId String @unique @db.ObjectId
  public_id  String
  url        String
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
}

